---
import Tecnology from "../Tecnology.astro"
import { tecnologies } from "../../config/tecnologies"
---

<section id="tecnologias" class="text-black-pearl-50 grid grid-cols-1 items-center text-center px-12 md:px-52 gap-5">
    <h1 class="text-xl font-bold">Â¿Que <strong class="drop-shadow-black-pearl-500 text-black-pearl-500">Tecnologias</strong> suelo utilizar?</h1>
    {
        tecnologies.map((section) => (
            <section class="flex flex-col gap-3">
                <h1 class="text-md font-bold">{section.section}</h1>
                <section class="flex flex-wrap items-center justify-center overflow-x-auto gap-3">
                    {
                    section.tecnologies.map((tecnology) => (
                        <Tecnology logo={tecnology.logo} logoAlt={tecnology.logoAlt} name={tecnology.name} />
                    ))
                }
                </section>
            </section>
        ))
    }
</section>